<div class="max-w-sm w-11/12 mx-auto pt-32">
  <h2 class="text-3xl text-center mb-8">Change your password</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
  
    <div class="mb-5">
      <%= f.label :password, "New password", class: "font-bold" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full text-xl rounded-xl" %>
      <% resource.errors.full_messages_for(:password).each do |message| %>
        <div class="text-xs text-red-700 font-bold">
          <%= message %>
        </div>
      <% end %>
    </div>
  
    <div class="mb-5">
      <%= f.label :password_confirmation, "Confirm new password", class: "font-bold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full text-xl rounded-xl" %>
      <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
        <div class="text-xs text-red-700 font-bold">
          <%= message %>
        </div>
      <% end %>
    </div>
  
    <div class="mb-5">
      <%= f.submit "Change my password", class: "bg-amber-300 hover:bg-amber-400 w-full font-bold py-2.5 uppercase rounded-xl" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
