<div class="flex flex-col h-screen justify-center">
  <div class="max-w-sm w-11/12 mx-auto">
    <h2 class="font-black text-4xl text-center mb-8">Sign in</h2>
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-5 space-y-1">
        <%= f.label :login, "Email / Username", class: "text-base font-bold" %>
        <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "w-full text-xl rounded-xl", data: { test_id: "login-field" } %>
      </div>
  
      <div class="mb-2 space-y-1">
        <%= f.label :password, class: "text-base font-bold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full text-xl rounded-xl", data: { test_id: "password-field" } %>
      </div>
  
      <div class="text-end text-sm font-bold">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-700" %>
      </div>
  
      <% if devise_mapping.rememberable? %>
        <div class="mb-9">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-base" %>
        </div>
      <% end %>
  
      <div class="mb-3">
        <%= f.submit "Log in", class: "bg-amber-300 hover:bg-amber-400 w-full font-bold py-2.5 text-base uppercase rounded-xl", data: { test_id: "submit-btn" } %>
      </div>
    <% end %>
  
    <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, data: { turbo: false }, class: "bg-blue-700 hover:bg-blue-800 w-full mb-7 font-bold py-2.5 text-white text-base uppercase rounded-xl" %>
  
    <div class="text-center">
      Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "font-bold italic text-blue-700", data: { test_id: "signup-link" } %>
    </div>
  </div>
</div>
