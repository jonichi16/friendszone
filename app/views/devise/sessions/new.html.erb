<div class="max-w-sm w-11/12 mx-auto pt-36">
  <h2 class="font-black text-4xl text-center mb-8">Sign in</h2>
    
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-5 space-y-1">
      <%= f.label :login, "Email / Username", class: "text-base font-bold" %>
      <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "w-full text-xl rounded-xl" %>
    </div>
    
    <div class="mb-5 space-y-1">
      <%= f.label :password, class: "text-base font-bold" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full text-xl rounded-xl" %>
    </div>
    
    <% if devise_mapping.rememberable? %>
      <div class="mb-9">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-base" %>
      </div>
    <% end %>
    
    <div class="mb-5">
      <%= f.submit "Log in", class: "bg-amber-300 hover:bg-amber-400 w-full font-bold py-2.5 text-base uppercase rounded-xl" %>
    </div>
  <% end %>
    
  <%= render "devise/shared/links" %>
</div>
