<div class="max-w-sm w-11/12 mx-auto pt-16">
  <h2 class="font-black text-4xl text-center mb-8">Sign up</h2>
    
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="mb-5 space-y-1">
      <%= f.label :email, class: "font-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full text-xl rounded-xl" %>
    </div>
    
    <div class="mb-5 space-y-1">
      <%= f.label :name, class: "font-bold" %>
      <%= f.text_field :name, class: "w-full text-xl rounded-xl" %>
    </div>
    
    <div class="mb-5 space-y-1">
      <%= f.label :username, class: "font-bold" %>
      <%= f.text_field :username, class: "w-full text-xl rounded-xl" %>
    </div>
    
    <div class="mb-5">
      <%= f.radio_button :gender, "male", checked: true, class: "mr-2" %>
      <%= f.label :gender_male, "Male", class: "font-bold mr-4" %>
      <%= f.radio_button :gender, "female", class: "mr-2" %>
      <%= f.label :gender_female, "Female", class: "font-bold" %>
    </div>
    
    <div class="mb-5 space-y-1">
      <%= f.label :location, class: "font-bold" %>
      <%= f.text_field :location, class: "w-full text-xl rounded-xl" %>
    </div>
    
    <div class="mb-5 space-y-1">
      <%= f.label :password, class: "font-bold" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full text-xl rounded-xl" %>
    </div>
    
    <div class="mb-9 space-y-1">
      <%= f.label :password_confirmation, class: "font-bold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full text-xl rounded-xl" %>
    </div>
    
    <div class="mb-5">
      <%= f.submit "Sign up", class: "bg-amber-300 w-full font-bold py-2.5 uppercase rounded-xl" %>
    </div>
  <% end %>
    
  <%= render "devise/shared/links" %>
</div>
