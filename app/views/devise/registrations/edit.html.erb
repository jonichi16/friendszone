<div class="max-w-md w-11/12 mx-auto pt-10">
  <h2 class="font-black text-4xl text-center mb-8">Edit <%= resource_name.to_s.humanize %></h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
    <div class="mb-5 space-y-1">
      <%= f.label :email, class: "font-bold" do %>
        Email<span class="text-red-700">*</span>
      <% end %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full text-xl rounded-xl", data: { test_id: "email-field" } %>
      <% resource.errors.full_messages_for(:email).each do |message| %>
        <div class="text-xs text-red-700 font-bold">
          <%= message %>
        </div>
      <% end %>
    </div>
  
    <div class="mb-5 space-y-1">
      <%= f.label :name, class: "font-bold" do %>
        Name<span class="text-red-700">*</span>
      <% end %>
      <%= f.text_field :name, class: "w-full text-xl rounded-xl", data: { test_id: "name-field" } %>
      <% resource.errors.full_messages_for(:name).each do |message| %>
        <div class="text-xs text-red-700 font-bold">
          <%= message %>
        </div>
      <% end %>
    </div>
  
    <div class="mb-5 space-y-1">
      <%= f.label :username, class: "font-bold" do %>
        Username<span class="text-red-700">*</span>
      <% end %>
      <%= f.text_field :username, class: "w-full text-xl rounded-xl", data: { test_id: "username-field" } %>
      <% resource.errors.full_messages_for(:username).each do |message| %>
        <div class="text-xs text-red-700 font-bold">
          <%= message %>
        </div>
      <% end %>
    </div>
  
    <div class="mb-5">
      <%= f.radio_button :gender, "male", checked: true, class: "mr-2" %>
      <%= f.label :gender_male, "Male", class: "font-bold mr-4" %>
      <%= f.radio_button :gender, "female", class: "mr-2", data: { test_id: "gender-radio-female" } %>
      <%= f.label :gender_female, "Female", class: "font-bold" %>
    </div>
  
    <div class="mb-5 space-y-1">
      <%= f.label :location, class: "font-bold" %>
      <%= f.text_field :location, class: "w-full text-xl rounded-xl", data: { test_id: "location-field" } %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
      <div class="mb-5 space-y-l">
      <%= f.label :password, class: "font-bold" do %>
        Password<span class="text-red-700">*</span>
      <% end %> <i class="text-xs">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full text-xl rounded-xl" %>
        <% if @minimum_password_length %>
          <em class="text-xs"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      <% resource.errors.full_messages_for(:password).each do |message| %>
        <div class="text-xs text-red-700 font-bold">
          <%= message %>
        </div>
      <% end %>
      </div>
    
    <div class="mb-5 space-y-1">
      <%= f.label :password_confirmation, class: "font-bold" do %>
        Password confirmation<span class="text-red-700">*</span>
      <% end %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full text-xl rounded-xl", data: { test_id: "password-confirmation-field" } %>
      <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
        <div class="text-xs text-red-700 font-bold">
          <%= message %>
        </div>
      <% end %>
    </div>
    
    <% if f.object.encrypted_password.present? %>
      <div class="mb-7 space-y-l">
        <%= f.label :current_password, class: "font-bold" do %>
          Current Password<span class="text-red-700">*</span>
        <% end %> <i class="text-xs">(confirm changes with current password)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full text-xl rounded-xl" %>
        <% resource.errors.full_messages_for(:current_password).each do |message| %>
          <div class="text-xs text-red-700 font-bold">
            <%= message %>
          </div>
        <% end %>
      </div>

    <% end %>
  
    <div class="mb-5">
      <% unless current_user.username == "sampleuser" %>
        <%= f.submit "Update", class: "bg-amber-300 hover:bg-amber-400 w-full font-bold py-2.5 uppercase rounded-xl" %>
      <% else %>
        <%= f.submit "Update", class: "bg-amber-300 w-full font-bold py-2.5 uppercase rounded-xl disabled:opacity-50 disabled:text-opacity-50 cursor-not-allowed", disabled: true if current_user.username == "sampleuser" %>
      <% end %>
    </div>
  <% end %>

  <%= link_to "Back", :back, class: "bg-slate-900 hover:bg-slate-950 w-full text-white font-bold py-2.5 uppercase rounded-xl inline-block text-center" %>
  
  <div class="flex gap-2 justify-center pb-9 pt-5">
    <p>Unhappy?</p>
    <% unless current_user.username == "sampleuser" %>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "italic text-red-700 hover:font-bold" %>
    <% else %>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "italic text-red-700 disabled:opacity-50 disabled:text-opacity-50 cursor-not-allowed", disabled: true if current_user.username == "sampleuser"  %>
    <% end %>
  </div>
</div>
