<div class="max-w-sm w-11/12 mx-auto pt-16">
  <h2 class="font-black text-4xl text-center mb-8">Edit <%= resource_name.to_s.humanize %></h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="mb-5 space-y-l">
      <%= f.label :email, class: "font-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full text-xl rounded-xl" %>
    </div>
  
    <div class="mb-5 space-y-l">
      <%= f.label :name, class: "font-bold" %>
      <%= f.text_field :name, class: "w-full text-xl rounded-xl" %>
    </div>
  
    <div class="mb-5 space-y-l">
      <%= f.label :username, class: "font-bold" %>
      <%= f.text_field :username, class: "w-full text-xl rounded-xl" %>
    </div>
  
    <div class="mb-5">
      <%= f.radio_button :gender, "male", checked: true, class: "mr-2" %>
      <%= f.label :gender_male, "Male", class: "font-bold mr-4" %>
      <%= f.radio_button :gender, "female", class: "mr-2" %>
      <%= f.label :gender_female, "Female", class: "font-bold" %>
    </div>
  
    <div class="mb-5 space-y-l">
      <%= f.label :location, class: "font-bold" %>
      <%= f.text_field :location, class: "w-full text-xl rounded-xl" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
      <div class="mb-5 space-y-l">
        <%= f.label :password, class: "font-bold" %> <i class="text-xs">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full text-xl rounded-xl" %>
        <% if @minimum_password_length %>
          
          <em class="text-xs"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    
      <div class="mb-5 space-y-l">
        <%= f.label :password_confirmation, class: "font-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full text-xl rounded-xl" %>
      </div>
    
    <% if f.object.encrypted_password.present? %>
      <div class="mb-9 space-y-l">
        <%= f.label :current_password, class: "font-bold" %> <i class="text-xs">(confirm changes with current password)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full text-xl rounded-xl" %>
      </div>
    <% end %>
  
    <div class="mb-5">
      <%= f.submit "Update", class: "bg-amber-300 hover:bg-amber-400 w-full font-bold py-2.5 uppercase rounded-xl" %>
    </div>
  <% end %>

  <%= link_to "Back", :back, class: "bg-slate-900 hover:bg-slate-950 w-full text-white font-bold py-2.5 uppercase rounded-xl inline-block text-center" %>
  
  <div class="flex gap-2 justify-center pb-9 pt-5">
    <p>Unhappy?</p>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "italic text-red-700 hover:font-bold"  %>
  </div>
</div>
