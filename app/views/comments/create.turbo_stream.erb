<%= turbo_stream.replace "#{dom_id(@post)}-comments-counter" do  %>
  <%= render "comment_counter", post: @post %>
<% end %>

<%= turbo_stream.replace "show-#{dom_id(@post)}-comments" do  %>
  <%= render "comments/form", comment: Comment.new, post: @post %>
<% end %>

<%= turbo_stream.prepend "#{dom_id(@post)}-comments" do %>
  <%= render "comments/comment", comment: @comment, post: @post %>
<% end %>
