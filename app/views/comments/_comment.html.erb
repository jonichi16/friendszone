<div id=<%= "#{dom_id(comment)}" %>, class="mt-3 px-2.5 py-3 border border-slate-900 rounded-md text-sm | sm:text-base">
  <%= link_to comment.user.name, user_path(comment.user), target: "_top", class: "block font-bold" %>
  <p class="text-xs text-slate-500 font-semibold"><%= get_comment_date(comment) %></p>
  <p class="mt-2 sm:mt-4"><%= comment.content %></p>
</div>