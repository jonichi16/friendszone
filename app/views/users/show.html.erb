<div class="flex flex-col items-center bg-white mx-auto py-5 mb-3 | sm:max-w-2xl">
  <h2 class="font-bold text-xl text-center my-3 | sm:text-2xl"><%= @user.name %></h2>
  <% if @user == current_user %>
    <%= render "edit_profile" %>
  <% else %>
    <%= render "friendship_button", user: @user, target: "_top" %>
  <% end %>
  <%= render "friends", user: @user %>
</div>

